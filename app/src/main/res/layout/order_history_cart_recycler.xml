<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/order_history_placeholder"
        android:layout_width="393dp"
        android:layout_height="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checkout_order_placeholder" />

    <TextView
        android:id="@+id/history_item_name"
        android:layout_width="176dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Big Mac"
        android:textColor="#F28E26"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/order_history_placeholder"
        app:layout_constraintTop_toTopOf="@+id/order_history_placeholder" />

    <TextView
        android:id="@+id/history_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="LKR 1400"
        android:textColor="#F28E26"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/order_history_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_history_placeholder" />

    <ImageView
        android:id="@+id/checkout_food_count_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/history_item_restaurant"
        app:layout_constraintEnd_toStartOf="@+id/history_item_price"
        app:layout_constraintTop_toTopOf="@+id/history_item_name"
        app:srcCompat="@drawable/rectangle_5" />

    <TextView
        android:id="@+id/history_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/checkout_food_count_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/checkout_food_count_placeholder"
        app:layout_constraintStart_toStartOf="@+id/checkout_food_count_placeholder"
        app:layout_constraintTop_toTopOf="@+id/checkout_food_count_placeholder" />

