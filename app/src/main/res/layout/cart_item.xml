<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="393dp"
        android:layout_height="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checkout_order_placeholder" />

    <TextView
        android:id="@+id/cartItemName"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Big Mac"
        android:textColor="#F28E26"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/cartItemTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LKR 1400"
        android:textColor="#F28E26"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toEndOf="@+id/checkout_remove_btn"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.489" />

    <ImageButton
        android:id="@+id/checkout_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@+id/cartItemName"
        app:layout_constraintTop_toBottomOf="@+id/cartItemName"
        app:srcCompat="@drawable/group_1"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/checkout_food_count_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/checkout_add_btn"
        app:layout_constraintStart_toEndOf="@+id/checkout_add_btn"
        app:layout_constraintTop_toTopOf="@+id/checkout_add_btn"
        app:srcCompat="@drawable/rectangle_5" />

    <ImageButton
        android:id="@+id/checkout_remove_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/checkout_food_count_placeholder"
        app:layout_constraintStart_toEndOf="@+id/checkout_food_count_placeholder"
        app:layout_constraintTop_toTopOf="@+id/checkout_food_count_placeholder"
        app:layout_constraintVertical_bias="0.277"
        app:srcCompat="@drawable/group_2"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/cartItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/checkout_food_count_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/checkout_food_count_placeholder"
        app:layout_constraintStart_toEndOf="@+id/checkout_add_btn"
        app:layout_constraintTop_toTopOf="@+id/checkout_food_count_placeholder" />

</androidx.constraintlayout.widget.ConstraintLayout>